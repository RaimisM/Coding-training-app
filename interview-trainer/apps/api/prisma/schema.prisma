generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  answers   Answer[]
}

model Question {
  id          String   @id @default(uuid())
  title       String
  content     String
  language    String
  difficulty  String
  createdAt   DateTime @default(now())

  answers     Answer[]
}

model Answer {
  id         String   @id @default(uuid())
  content    String
  score      Int
  createdAt  DateTime @default(now())

  userId     String
  questionId String

  user       User     @relation(fields: [userId], references: [id])
  question   Question @relation(fields: [questionId], references: [id])
}
